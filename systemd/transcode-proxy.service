[Unit]
Description=Audio Transcoding Proxy for YTuner
After=network.target

[Service]
ExecStart=/usr/bin/python3 /opt/ytuner/transcode-proxy.py
WorkingDirectory=/opt/ytuner
Restart=always
RestartSec=3
Environment=TRANSCODE_PORT=8888
Environment=TRANSCODE_BITRATE=192k
Environment=TRANSCODE_MAX_CONCURRENT=4
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
